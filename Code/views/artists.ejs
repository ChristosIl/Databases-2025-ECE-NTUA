<!DOCTYPE html>
<html>
<head>
  <title>Artists</title>

  <style>
      body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: white;
        }

      .title-section {
            background-color: blue;
            padding: 40px;
            border-radius: 0;
            margin-bottom: 30px;
        }

      h1 {
          margin-bottom: 20px;
          color: white;
          font-size: 40px;
          font-family: 'Courier New', Courier, monospace;
          width: 100%;
      }

      table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
      padding: 10px;
      margin: 0 auto;
      border-collapse: collapse ;
      font-family:Arial, Helvetica, sans-serif;
      
    }

    .LowBar{
            position: fixed;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            justify-content: flex-end; /* τα σπρώχνει δεξιά */
            gap: 20px;                 /* απόσταση μεταξύ τους */
            padding: 15px;
        }
    
    .Add-Artist a{
            font-family: 'Courier New', Courier, monospace;
            font-size: 25px;
            color: black;
        }

    .Add-Artist a:hover {
            color: blue;
            text-decoration: underline;
        }    
        
    .Go-Back a{
            font-family: 'Courier New', Courier, monospace;
            font-size: 25px;
            color: black;
        }

    .Go-Back a:hover {
            color: blue;
            text-decoration: underline;
        }
  </style>
</head>
<body>
  <div class="title-section">
    <h1>Artists List</h1>
  </div>
  

  <table>
    <thead>
     <tr>
      <th>Artist ID</th>
      <th>Artist Name</th>
      <th>Nickname</th>
      <th>Birthdate</th>
      <th>Website</th>
      <th>Instagram</th>
     </tr> 
    </thead>
    <tbody>
      <% artists.forEach(row => { %>
        <tr>
          <td><%= row.artist_id %></td>
          <td><%= row.name %></td>
          <td><%= row.nickname %></td>
          <td><%= row.birth_date %></td>
          <td><%= row.website %></td>
          <td><%= row.instagram %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  
  <br>
  <div class="LowBar">
        <div class="Go-Back">
          <a href="/data">Back</a>
        </div>

        <div class="Add-Artist">
            <a href="/artist/add">Add Artist</a>
        </div>

    </div>
  
</body>
</html>
